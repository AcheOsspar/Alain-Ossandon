    animation: scroll 30s linear infinite; /* ğŸ”¸ Velocidad: cambia "30s" (mÃ¡s = mÃ¡s lento) */
    width: max-content;               /* Se adapta al contenido (permite overflow) */
  }

  /* â¸ï¸ PAUSA AL HACER HOVER */
  .carousel-track:hover {
    animation-play-state: paused;     /* Detiene el carrusel al pasar el mouse */
  }

  /* ============================================
     ğŸ·ï¸ LOGOS INDIVIDUALES
     ============================================ */
  .logo-item {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 180px;                 /* ğŸ”¸ Ancho mÃ­nimo de cada logo */
    height: 80px;                     /* ğŸ”¸ Altura de cada logo */
    padding: 1.5rem 2rem;
    
    /* ğŸ¨ ESTILO DEL CONTENEDOR */
