  }

  .logo-item:hover span {
    color: #BDFC49;                   /* ğŸ”¸ Color del texto en hover */
  }

  /* ============================================
     ğŸ¬ ANIMACIÃ“N DE SCROLL INFINITO
     ============================================ */
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
